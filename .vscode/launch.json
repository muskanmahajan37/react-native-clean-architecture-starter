{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Android",
      "cwd": "${workspaceFolder}",
      "type": "reactnative",
      "request": "launch",
      "platform": "android",
      "target": "simulator"
    },
    {
      "name": "Debug iOS",
      "cwd": "${workspaceFolder}",
      "type": "reactnative",
      "request": "launch",
      "platform": "ios",
      "scheme": "RNStarter (Develop)",
      "runArguments": ["--scheme", "RNStarter (Develop)", "--simulator"]
    },
    {
      "name": "Attach to packager",
      "cwd": "${workspaceFolder}",
      "type": "reactnative",
      "request": "attach"
    },
    {
      "name": "[Hermes] Debug Android",
      "cwd": "${workspaceFolder}",
      "type": "reactnativedirect",
      "request": "launch",
      "platform": "android"
    },
    {
      "name": "[Hermes] Debug iOS",
      "cwd": "${workspaceFolder}",
      "type": "reactnativedirect",
      "request": "launch",
      "platform": "ios"
    },
    {
      "name": "[Hermes] Attach to application",
      "cwd": "${workspaceFolder}",
      "type": "reactnativedirect",
      "request": "attach"
    }
  ]
}
